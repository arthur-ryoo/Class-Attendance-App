<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(function(c) { %>
    <tr>
      <td><%= c.title %></td>
      <td><%= c.location %></td>
      <td><%= c.description %></td>
      <td><a href="/courses/<%= c._id %>">Details</a></td>
      <td>
        <form
          action="/courses/<%= c._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
