<%- include('../partials/header') %>

<section id="show-page">
  <div>Title:</div>
  <div><%= courses.title %></div>
  <div>Location:</div>
  <div><%= courses.location %></div>
  <div>Credit:</div>
  <div><%= courses.credit %></div>
  <div>Attendance:</div>
  <ul>
    <%- courses.attendance.map(s => `
    <li>
      ${s.name} | ${s.year} | <small>${s.born.toLocaleDateString()}</small>
    </li>
    ` ).join('') %>
  </ul>
</section>
<form
  id="add-per-to-attend"
  action="/courses/<%= course._id%>/students"
  method="POST"
>
  <select name="studentId">
    <%- students.map(s => `<option value="${s._id}">${s.name}</option
    >` ).join('') %>
  </select>
  <button type="submit">Add to Attend</button>
</form>

<%- include('../partials/footer') %>
